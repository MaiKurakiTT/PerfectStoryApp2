<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <cn.jinmiao.bbs.perfectstoryapp.custom.WebViewWithProgress
        android:id="@+id/my_recharge_WebView_id"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </cn.jinmiao.bbs.perfectstoryapp.custom.WebViewWithProgress>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        >

        <TextView
            android:id="@+id/exit_recharge_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/exit_register"
            android:text="返回个人中心"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/no_user_title_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/nav_bg">

        <ImageView
            android:id="@+id/search_music_Home_Btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/nav_previous_normal"/>

        <TextView
            android:id="@+id/bar_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/home_top_title"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <!--
                <ImageView
                    android:id="@+id/nowPlaySingListPageImg_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/playing_sing"/>-->
    </RelativeLayout>


</RelativeLayout>
