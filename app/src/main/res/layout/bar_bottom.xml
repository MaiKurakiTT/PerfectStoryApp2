<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/tabbar_normal_bg"
    android:layout_margin="0dp"
    >
        <TextView
            android:id="@+id/tab_bottom_home_story_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/bottom_story"
            android:textColor="@color/white"
            android:drawableTop="@drawable/bottom_story_press"
            />

        <TextView
            android:id="@+id/tab_bottom_userCenter_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/bottom_me"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:drawableTop="@drawable/bottom_account_normal"
            />
</LinearLayout>
