<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/PlayerListNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="1"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/music_list_title_larger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/music_list_larger"
                android:text="@string/app_name"
                />
            <TextView
                android:id="@+id/music_list_title_smaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/music_list_smaller"
                android:text="@string/app_name"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/nowPlaySingListBtnImg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/playing_sing"/>
    </LinearLayout>

</LinearLayout>
